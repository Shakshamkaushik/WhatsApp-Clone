<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_screen_bg_color"
    tools:context=".fragments.CallFragment">

    <LinearLayout
        android:id="@+id/callLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_layout_bg_color"
        android:gravity="center"
        android:paddingTop="27dp"
        android:paddingBottom="5dp"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="5dp"
            android:text="@string/whatsapp"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="175dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/whatsapp_camera_icon"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="36dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/three_dot_vertical"
            tools:ignore="contentDescription" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/callRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/callLL"
        android:layout_marginTop="4dp"
        tools:itemCount="4"
        tools:listitem="@layout/call_rv_layout" />

</RelativeLayout>