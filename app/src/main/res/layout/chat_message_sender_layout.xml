<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="end"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="0dp"
    app:layout_goneMarginEnd="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="4dp"
        android:background="@drawable/chat_message_send_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvChatMessageSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:paddingTop="4dp"
            android:text="Hey Shaksham This SIde Say"
            android:textColor="@color/chat_message_send_text_bg"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="2dp"
            android:gravity="end|bottom"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            tools:ignore="UseCompoundDrawables,UselessParent">


        <TextView
            android:id="@+id/chatMessageSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:57 am"
            android:textColor="@color/chat_message_time_color"
            android:textSize="11sp"
            tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/ivSendMessageStatusTick"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/send_message_delivery_status"
                android:src="@drawable/single_tick" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>